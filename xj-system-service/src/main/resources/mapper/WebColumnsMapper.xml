<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.wxiaoqi.security.hrsystem.mapper.WebColumnsMapper">
    <resultMap id="WebColumnsResultMap" type="com.github.wxiaoqi.security.hrsystem.entity.WebColumns">

    </resultMap>

    <resultMap id="PanelVoResultMap" type="com.github.wxiaoqi.security.hrsystem.vo.PanelVo">
        <result column="DisplayLabel" property="zhTw"/>
        <result column="DisplayLabel" property="label"/>

    </resultMap>
  

    <select id="selectByTablename" resultMap="WebColumnsResultMap">
     select * from WebColumns where TableName = #{tablename} ORDER BY ColOrder
    </select>

    <select id="selectPanelVoByTablename" resultMap="PanelVoResultMap">
        select * from WebColumns where TableName = #{tablename} and ColVisible != 0 ORDER BY ColOrder
    </select>

    <select id="selctBySqlToWebColms" resultMap="WebColumnsResultMap">
        ${sql}
    </select>

    <select id="selctBySqlToMap" resultType="java.util.Map">
        ${sql}
    </select>

    <update id="updateBySql" parameterType="java.lang.String">
        ${sql}
    </update>

    <insert id="insertBySql" parameterType="java.lang.String">
        ${sql}
    </insert>
</mapper>